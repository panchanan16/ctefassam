generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

// 1. Gallery Model
model Gallery {
  id        Int       @id @default(autoincrement())
  title     String
  photo     String
  date      DateTime? @default(now())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// 2. Events Model
model Event {
  id            Int      @id @default(autoincrement())
  title         String
  date          String
  time          String?
  image         String?
  platform      String?
  venue         String?
  collaboration String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// 3. Newsletter Model
model Newsletter {
  id         Int      @id @default(autoincrement())
  title      String?
  date       String?
  coverImage String?
  fileUrl    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
